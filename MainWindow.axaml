<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        x:Class="MMPET.MainWindow"
        Title="MMPET - 宠物名称读取器"
        Width="800" Height="600"
        WindowStartupLocation="CenterScreen"
        Background="#1E1E1E">
    
    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        
        <!-- 标题栏 -->
        <TextBlock Grid.Row="0" 
                   Text="MMPET - 宠物名称读取器" 
                   FontSize="20" 
                   FontWeight="Bold" 
                   Foreground="White"
                   HorizontalAlignment="Center"
                   Margin="0,0,0,20"/>
        
        <!-- 控制按钮 -->
        <StackPanel Grid.Row="1" Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,0,0,10">
            <Button Name="ConnectButton" 
                    Content="连接进程" 
                    Width="100" 
                    Height="35"
                    Margin="5"
                    Background="#0078D4"
                    Foreground="White"
                    Click="ConnectButton_Click"/>
            <Button Name="RefreshButton" 
                    Content="刷新宠物" 
                    Width="100" 
                    Height="35"
                    Margin="5"
                    Background="#107C10"
                    Foreground="White"
                    IsEnabled="False"
                    Click="RefreshButton_Click"/>
            <Button Name="OverlayButton" 
                    Content="开启覆盖" 
                    Width="100" 
                    Height="35"
                    Margin="5"
                    Background="#FF6B35"
                    Foreground="White"
                    IsEnabled="False"
                    Click="OverlayButton_Click"/>






        </StackPanel>
        
        <!-- 主内容区域 -->
        <!-- 宠物列表 -->
        <Border Grid.Row="2" 
                Background="#2D2D30" 
                BorderBrush="#3F3F46" 
                BorderThickness="1"
                CornerRadius="5"
                Margin="0,0,0,0">
                <ScrollViewer>
                    <ListBox Name="PetListBox" 
                             Background="Transparent"
                             Foreground="White"
                             SelectionMode="Single">
                        <ListBox.ItemTemplate>
                            <DataTemplate>
                                <Border Background="#3C3C3C" 
                                        Margin="2" 
                                        Padding="10" 
                                        CornerRadius="3"
                                        BorderBrush="#555555"
                                        BorderThickness="1">
                                    <StackPanel>
                                        <TextBlock Text="{Binding DisplayName}" 
                                                   FontWeight="Bold" 
                                                   FontSize="14"
                                                   Foreground="#4FC3F7"/>
                                        <TextBlock Text="{Binding Details}" 
                                                   FontSize="12"
                                                   Foreground="#CCCCCC"
                                                   Margin="0,2,0,0"/>
                                        <TextBlock Text="{Binding Position}" 
                                                   FontSize="11"
                                                   Foreground="#888888"
                                                   Margin="0,2,0,0"/>
                                    </StackPanel>
                                </Border>
                            </DataTemplate>
                        </ListBox.ItemTemplate>
                    </ListBox>
                </ScrollViewer>
            </Border>
        
        <!-- 状态栏 -->
        <TextBlock Grid.Row="3" 
                   Name="StatusText"
                   Text="未连接到进程"
                   Foreground="#CCCCCC"
                   HorizontalAlignment="Center"
                   Margin="0,10,0,0"/>
    </Grid>
</Window>